<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    	  xmlns:app="http://schemas.android.com/apk/res/com.jjm.android.quiz">
	<item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_start" />
            <stroke android:width="1dp" android:color="@color/btn_end" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/btn_end" android:startColor="@color/btn_start" />
            <stroke android:width="1dp" android:color="@color/btn_end" />
            <corners android:radius="4dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item> 
</selector>
